<?xml version="1.0"?>
<cd:Record format="binary" name="GOME2_GEO_SUN_v1" last-modified="2008-07-01" xmlns:cd="http://www.stcorp.nl/coda/definition/2008/07">
  <cd:Description>Additional geolocation record for Sun measurements (format version 1)</cd:Description>
  <cd:Field name="DISTANCE_SAT_SUN">
    <cd:Integer>
      <cd:Description>Satellite-Sun distance</cd:Description>
      <cd:Unit>1e3 m</cd:Unit>
      <cd:Conversion numerator="1000.000000" denominator="1.000000">
        <cd:Unit>m</cd:Unit>
      </cd:Conversion>
      <cd:BitSize>32</cd:BitSize>
      <cd:NativeType>int32</cd:NativeType>
    </cd:Integer>
  </cd:Field>
  <cd:Field name="VEL_SAT_SUN">
    <cd:Integer>
      <cd:Description>Relative speed of satellite and sun (negative if satellite is moving towards the sun)</cd:Description>
      <cd:Unit>1e-3 m/s</cd:Unit>
      <cd:Conversion numerator="1.000000" denominator="1000000.000000">
        <cd:Unit>m/s</cd:Unit>
      </cd:Conversion>
      <cd:BitSize>32</cd:BitSize>
      <cd:NativeType>int32</cd:NativeType>
    </cd:Integer>
  </cd:Field>
</cd:Record>
